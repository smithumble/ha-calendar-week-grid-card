{
  "name": "calendar-week-grid-card",
  "version": "2.1.3",
  "type": "module",
  "description": "A custom Home Assistant card that displays calendar events in a week grid format.",
  "main": "dist/calendar-week-grid-card.js",
  "module": "dist/calendar-week-grid-card.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "demo": "npm run demo:build && vite --config demo/vite.config.ts",
    "demo:dev": "rollup -c demo/rollup.config.mjs -w & sleep 2 && vite --config demo/vite.config.ts",
    "demo:build": "rollup -c demo/rollup.config.mjs",
    "lint": "eslint src scripts src demo",
    "lint:fix": "eslint src demo --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate-screenshots": "npm run demo:build && tsx scripts/generate-screenshots.ts",
    "generate-screenshots:force": "npm run demo:build && tsx scripts/generate-screenshots.ts --force",
    "update-readme": "npm run demo:build && tsx scripts/update-readme.ts",
    "pre-commit": "npm run lint:fix && npm run format && npm run update-readme",
    "pre-commit:generate": "npm run pre-commit && npm run generate-screenshots:force",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "calendar",
    "custom-card"
  ],
  "author": {
    "name": "Oleksii Kuznietsov",
    "email": "smithumble@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "js-yaml": "^4.1.1",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@mdi/svg": "^7.4.47",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@rollup/plugin-yaml": "^4.1.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.25",
    "date-fns-tz": "^3.2.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.26.0",
    "globals": "^16.5.0",
    "home-assistant-js-websocket": "^6.0.1",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "puppeteer": "^24.31.0",
    "rollup": "^4.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-postcss-lit": "^2.0.0",
    "tslib": "^2.6.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.48.0",
    "vite": "^5.4.0"
  },
  "prettier": {
    "singleQuote": true
  }
}
