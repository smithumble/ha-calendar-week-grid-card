{
  "name": "calendar-week-grid-card",
  "version": "2.1.3",
  "type": "module",
  "description": "A custom Home Assistant card that displays calendar events in a week grid format.",
  "main": "dist/calendar-week-grid-card.js",
  "module": "dist/calendar-week-grid-card.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "all:build": "rollup -c demo/rollup.config.mjs",
    "all:watch": "rollup -c demo/rollup.config.mjs -w & vite --config demo/vite.config.ts",
    "all": "rollup -c demo/rollup.config.mjs && vite --config demo/vite.config.ts",
    "demo:build": "rollup -c demo/rollup.demo.config.mjs",
    "demo:watch": "rollup -c demo/rollup.demo.config.mjs -w & vite --config demo/vite.config.ts",
    "demo": "rollup -c demo/rollup.demo.config.mjs && vite --config demo/vite.config.ts",
    "demo:dev:build": "cross-env NODE_ENV=development rollup -c demo/rollup.demo.config.mjs",
    "demo:dev:watch": "cross-env NODE_ENV=development rollup -c demo/rollup.demo.config.mjs -w & vite --config demo/vite.config.ts",
    "demo:dev": "cross-env NODE_ENV=development rollup -c demo/rollup.demo.config.mjs && vite --config demo/vite.config.ts",
    "schedule:build": "rollup -c demo/rollup.schedule.config.mjs",
    "schedule:watch": "rollup -c demo/rollup.schedule.config.mjs -w & vite --config demo/vite.config.ts",
    "schedule": "rollup -c demo/rollup.schedule.config.mjs && vite --config demo/vite.config.ts",
    "screenshots:build": "rollup -c demo/rollup.screenshot.config.mjs",
    "screenshots:watch": "rollup -c demo/rollup.screenshot.config.mjs -w & vite --config demo/vite.config.ts",
    "screenshots": "rollup -c demo/rollup.screenshot.config.mjs && vite --config demo/vite.config.ts",
    "screenshots:generate": "npm run screenshots:build && tsx scripts/screenshots/generate.ts --force",
    "screenshots:generate:docker": "./scripts/screenshots/generate.sh",
    "screenshots:compare": "tsx scripts/screenshots/compare.ts media/images/ --diffs media/images/diffs --threshold 1 --pixel-threshold 0.01",
    "readme:update-configs": "npm run demo:build && tsx scripts/readme/update-configs.ts",
    "readme:update-image-urls": "tsx scripts/readme/update-image-urls.ts",
    "lint": "eslint src scripts demo",
    "lint:fix": "eslint src scripts demo --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "git:check:all": "./scripts/git/check.sh .",
    "git:check:screenshots": "./scripts/git/check.sh media/images/",
    "git:check:readme": "./scripts/git/check.sh README.md"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "calendar",
    "custom-card"
  ],
  "author": {
    "name": "Oleksii Kuznietsov",
    "email": "smithumble@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "js-yaml": "^4.1.1",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@mdi/svg": "^7.4.47",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@rollup/plugin-yaml": "^4.1.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.25",
    "@types/pngjs": "^6.0.5",
    "cross-env": "^10.1.0",
    "date-fns-tz": "^3.2.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.26.0",
    "globals": "^16.5.0",
    "home-assistant-js-websocket": "^6.0.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "puppeteer": "^24.31.0",
    "rollup": "^4.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-postcss-lit": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  },
  "overrides": {
    "glob": "^10.0.0",
    "svgo": "^3.0.0"
  },
  "prettier": {
    "singleQuote": true
  }
}
